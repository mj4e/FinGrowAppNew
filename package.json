{
  "name": "fingrow-app",
  "version": "1.0.0",
  "description": "Islamic Finance App - Halal Investment & Zakat Management",
  "main": "expo/AppEntry.js",
  "keywords": ["islamic", "finance", "zakat", "halal", "investment", "sukuk", "mudarabah"],
  "author": "FinGrow Team",
  "license": "MIT",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android", 
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "eject": "expo eject",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "clean": "expo r -c",
    "doctor": "expo doctor"
  },
  "dependencies": {
    "@expo/metro-config": "~0.20.0",
