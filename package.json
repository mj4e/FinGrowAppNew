    "react-redux": "^9.1.2",
    "redux-persist": "^6.0.0",
    "axios": "^1.7.2",
    "date-fns": "^3.6.0",
    "lodash": "^4.17.21",
    "react-native-uuid": "^2.0.2",
    "react-native-share": "^10.2.1",
